<UserControl x:Class="Terminal.Component.Controls.MasterChat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Terminal.Component.Controls"
             mc:Ignorable="d" 
            >
    <Grid >
        <ItemsControl x:Name="itcMasterChat" Style="{StaticResource ItemsControlVirtualization}" ItemTemplateSelector="{StaticResource ChatTemplateSelector}"/>
        <Border x:Name="brdUnread" Height="50" Width="50" HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="Red" CornerRadius="25" Visibility="Collapsed"/>
    </Grid>
</UserControl>
